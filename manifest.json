{
  "manifest_version": 3,
  "name": "DrillsterBot",
  "description": "Automate your Drillster work!",
  "version": "1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "menu/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "script/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.drillster.com/*"
      ],
      "js": [
        "script/content.js"
      ],
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://*.drillster.com/*"
  ],
  "permissions": [
    "activeTab",
    "webNavigation",
    "contextMenus",
    "cookies",
    "notifications"
  ],
  "commands": {
    "start_stop": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Start / Stop the bot"
    }
  }
}